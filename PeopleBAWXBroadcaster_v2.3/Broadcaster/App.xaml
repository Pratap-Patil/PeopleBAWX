<Application x:Class="Broadcaster.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Broadcaster"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup">
  <Application.Resources>
    <Thickness x:Key="BoxedContentMargin" Top="4" Left="10" Right="10" Bottom="4"></Thickness>
    <Style TargetType="TextBlock" x:Key="SectionTitle">
      <Setter Property="FontWeight" Value="Bold" />
      <Setter Property="FontStyle" Value="Italic" />
    </Style>
    <Style x:Key="BorderStyle" TargetType="Rectangle">
      <Setter Property="Stroke" Value="Black" />
      <Setter Property="RadiusX" Value="5" />
      <Setter Property="RadiusY" Value="5" />
    </Style>
  </Application.Resources>
</Application>
